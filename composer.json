{
    "name": "bambamboole/framework",
    "autoload": {
        "psr-4": {
            "Bambamboole\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Bambamboole\\Framework\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "bambamboole",
            "email": "manuel.christlieb@xentral.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.4",
        "symfony/var-dumper": "^6.1",
        "symfony/finder": "^6.1",
        "psr/container": "^2.0",
        "symfony/routing": "^6.1",
        "symfony/http-foundation": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpstan/phpstan": "^1.8"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint:fix": "php-cs-fixer fix --allow-risky=yes",
        "lint:show": "php-cs-fixer fix --allow-risky=yes --dry-run --diff",
        "phpstan": "phpstan analyze --memory-limit=320M"
    }
}
